<h3>Rota for <%= @rota.procurement_area_name %></h3>

<%= form_tag(procurement_area_rotas_path(@procurement_area), method: :get) do %>
  <h3>Filter</h3>
  <%= date_select("rota_filter", "starting_date", default: @rota.date_range.first, start_year: 2014, end_year: Date.today.year + 3) %>
  to
  <%= date_select("rota_filter", "ending_date",   default: @rota.date_range.last, start_year: 2014, end_year: Date.today.year + 3) %>
  <%= submit_tag "Filter" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <% @rota.shifts.each do |shift| %>
      <th>
      <%= @rota.location_for_shift(shift).try(:name) %>
      </br>
      <%= shift.info %>
      </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @rota.date_range.each do |date| %>
    <tr>
      <td><%= date.strftime("%A, %-d %b %Y") %></td>

      <% @rota.shifts.each do |shift| %>
      <td>
        <%= present_organisations(@rota.on_duty(date, shift)) %>
      </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
